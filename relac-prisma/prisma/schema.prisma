generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// As tabelas Movie e MovieDetails possuem relacionamento 1:1.
// As tabelas Movie e Director possuem relacionamento 1:N.
// As tabelas Movie e Category possuem relacionamento N:N.

model Movie {
  id String @id @default(uuid())
  title String
  releaseDate DateTime @default(now()) @map("release_date")
  
  movieDetailId String @unique @map("movie_detail_id")
  detail MovieDetail @relation(fields: [movieDetailId], references: [id], onDelete: Cascade)
  
  directorId String @map("director_id") 
  director Director @relation(fields: [directorId], references: [id])

  CategoriesOnMovies CategoriesOnMovies[]

@@map("movie")
}

model MovieDetail{
  id String @id @default(uuid())
  duration Int
  description String 
  Movie Movie?

  @@map("movie_detail")
}

model Director{
  id String @id @default(uuid())
  name String @db.VarChar(55)
  movie Movie[]

  @@map("director")
}


model Category{
  id String @id @default(uuid())
  name String @unique

  CategoriesOnMovies CategoriesOnMovies[]
}

// Model associativa do relacionamento Movie e Category (N:N)
model CategoriesOnMovies{
  id String @id @default(uuid())

  movieId String @map("movie_id")
  movie Movie @relation(fields: [movieId], references: [id])

  categoryId String @map("category_id")
  category Category @relation(fields: [categoryId], references: [id])
}




// *models para praticar

model User {
  id String @id @default(uuid())
  name String @db.VarChar(64)

  post Post[]

  registration Registration?

  @@map("user")
}

model Post {
  id String @id @default(uuid())
  text String @db.VarChar(100)
  createdAt DateTime @default(now()) @map("created_at")

  userId String @map("user_id")
  user User @relation(fields: [userId], references: [id])

  @@map("post")
}

model Registration {
  id String @id @default(uuid())
  code Int 

  userId String @unique @map("user_id")
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("registration")
}