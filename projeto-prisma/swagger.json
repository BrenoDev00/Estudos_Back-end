{
  "openapi": "3.1.0",
  "info": {
    "title": "Projeto Prisma",
    "description": "Projeto Prisma com Swagger.",
    "version": "1.0.0",
    "license": {
      "name": "Licença MIT"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000",
      "description": "API de desenvolvimento."
    }
  ],
  "paths": {
    "/contacts": {
      "get": {
        "summary": "Lista contatos",
        "description": "Lista todos os contatos.",
        "tags": ["Contact"],
        "responses": {
          "200": {
            "description": "Sucesso."
          },
          "500": {
            "description": "Erro interno do servidor."
          }
        }
      },

      "post": {
        "summary": "Cadastra contato",
        "description": "Cadastra novo contato.",
        "tags": ["Contact"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "title": {
                          "type": "string"
                        },
                        "number": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "address": {
                    "type": "object",
                    "properties": {
                      "street": {
                        "type": "string"
                      },
                      "zipCode": {
                        "type": "string"
                      },
                      "number": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "": {
            "description": ""
          }
        }
      }
    },
    "/contacts/{contactId}": {
      "get": {
        "summary": "Lista contato",
        "description": "Lista contato pelo seu id.",
        "tags": ["Contact"],
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "200": {
            "description": "Sucesso."
          },
          "404": {
            "description": "Contato não encontrado."
          },
          "500": {
            "description": "Erro interno do servidor."
          }
        }
      },
      "put": {
        "summary": "Atualiza contato",
        "description": "Atualiza contato existente.",
        "tags": ["Contact"],
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "phone": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "title": {
                          "type": "string"
                        },
                        "number": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "address": {
                    "type": "object",
                    "properties": {
                      "street": {
                        "type": "string"
                      },
                      "zipCode": {
                        "type": "string"
                      },
                      "number": {
                        "type": "number"
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "": {
            "": ""
          }
        }
      },
      "delete": {
        "summary": "Exclui contato",
        "description": "Exclui um contato pelo seu id.",
        "tags": ["Contact"],
        "parameters": [
          {
            "in": "path",
            "name": "contactId",
            "schema": {
              "type": "string"
            },
            "required": true
          }
        ],
        "responses": {
          "": {
            "": ""
          }
        }
      }
    }
  }
}
